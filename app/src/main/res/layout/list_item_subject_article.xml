<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

    <com.talentsprint.android.esa.views.OpenSansTextView
        android:id="@+id/topicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/topicImage"
        android:layout_weight="1"
        android:text="Sub Topic"
        android:textColor="@color/gray_dark"
        android:textSize="15dp"/>

    <com.talentsprint.android.esa.views.OpenSansTextView
        android:id="@+id/subTopicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topicName"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/topicImage"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/sample_dummy"
        android:textColor="@color/gray_dark"
        android:textSize="11dp"/>


    <ImageView
        android:id="@+id/topicImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_shadow"
        android:padding="10dp"
        android:src="@drawable/logo_color"/>
</RelativeLayout>